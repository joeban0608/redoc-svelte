					"required": false,
					"schema": { "$ref": "#/definitions/Page" }
				},
				{
					"name": "limit",
					"in": "query",
					"description": "The maximum number of items per page, optional. Min: 1, Max: 100 (default: 25)",
					"required": false,
					"schema": { "$ref": "#/definitions/Limit" }
