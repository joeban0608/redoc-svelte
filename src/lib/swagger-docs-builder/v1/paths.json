							"items": {
								"type": "array",
								"items": {
									"type": "object",
									"properties": {
										"id": { "type": "string", "format": "uuid" },
										"title": { "type": "string" },
										"createdAt": { "type": "string", "format": "date-time" },
										"updatedAt": { "type": "string", "format": "date-time" }
									}
								}
							},
							"Pagination": {
								"$ref": "#/definitions/Pagination"
							}
						}
					}
				}
			},
			"security": [{ "api_key": [] }]
		}
	}
}
