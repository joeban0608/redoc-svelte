{
  "swagger": "2.0",
  "info": {
    "description": "This is a sample server Pageyai server. For this sample, you can use the api key `special-key` to test the authorization filters.",
    "version": "0.0.1",
    "title": "Pageyai Documentation",
    "termsOfService": "http://localhost:5173/docs/term-of-service",
    "contact": {
      "email": "jow@wows.ai"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "localhost:5173",
  "basePath": "/api",
  "tags": [
    {
      "name": "todo",
      "description": "Todo API for managing tasks and notes."
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "X-API-KEY",
      "in": "header"
    }
  },
  "definitions": {
    "Pagination": {
      "type": "object",
      "properties": {
        "page": {
          "$ref": "#/definitions/Page"
        },
        "limit": {
          "$ref": "#/definitions/Limit"
        },
        "total": {
          "type": "integer"
        }
      }
    },
    "Page": {
      "type": "integer",
      "minimum": 1,
      "example": 1
    },
    "Limit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 25,
      "example": 20
    }
  },
  "externalDocs": {
    "description": "Find out more about Swagger",
    "url": "http://swagger.io"
  },
  "paths": {
    "/todos": {
      "get": {
        "tags": [
          "todo"
        ],
        "summary": "Retrieve all todos",
        "description": "Fetches a list of all todos.",
        "operationId": "getTodos",
        "consumes": [],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "The page number for pagination, optional. Must be greater than 0.",
            "required": false,
            "schema": {
              "$ref": "#/definitions/Page"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "The maximum number of items per page, optional. Min: 1, Max: 100 (default: 25)",
            "required": false,
            "schema": {
              "$ref": "#/definitions/Limit"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful get todos",
            "schema": {
              "type": "object",
              "properties": {
                "items": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "title": {
                        "type": "string"
                      },
                      "createdAt": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "updatedAt": {
                        "type": "string",
                        "format": "date-time"
                      }
                    }
                  }
                },
                "Pagination": {
                  "$ref": "#/definitions/Pagination"
                }
              }
            }
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    }
  }
}